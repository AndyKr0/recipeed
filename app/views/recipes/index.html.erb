<% provide(:title, 'Recipes') %>

<div class="center hero-unit">
  <h3 class="text-left">Recipes</h3>

  <table>
    <thead>
      <tr class="text-left">
        
        <th>Title</th>
        <th>User name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @recipes.each do |recipe| %>
        <tr class="text-left">
          
          <td><%= link_to recipe.title, recipe.url %></td>
          <td><%= recipe.user_name %></td>
          <td><%= link_to 'Show', recipe %>-</td>
          <td><%= link_to 'Edit', edit_recipe_path(recipe) %>-</td>
          <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <button class="btn btn-default">
    <%= link_to 'New Recipe', new_recipe_path %>
  </button>
</div>

